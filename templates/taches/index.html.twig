{% extends 'base.html.twig' %}

{% block title %}Tache index{% endblock %}

{% block body %}
    <h1>Tache index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>DateLivraison</th>
                <th>DateComplete</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tache in taches %}
            <tr>
                <td>{{ tache.id }}</td>
                <td>{{ tache.titre }}</td>
                <td>{{ tache.description }}</td>
                <td>{{ tache.createdAt ? tache.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tache.dateLivraison ? tache.dateLivraison|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tache.dateComplete ? tache.dateComplete|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tache.etat }}</td>
                <td>
                    <a href="{{ path('app_taches_show', {'id': tache.id}) }}">show</a>
                    <a href="{{ path('app_taches_edit', {'id': tache.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_taches_new') }}">Create new</a>
{% endblock %}
